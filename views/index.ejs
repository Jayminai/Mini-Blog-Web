<%- include('partials/header') %>
<main class="container">
    <h1>All Posts</h1>

    <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.body %></p>

                <form action="/edit-post/<%= post.id %>" method="GET" style="display:inline;">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>

                <form action="/delete-post/<%= post.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <hr>
        <% }) %>
    <% } else { %>
        <p>No posts yet! <a href="/create-post">Create a new post</a></p>
    <% } %>

    <a href="/create-post" class="btn btn-success">Create New Post</a>
</main>
<%- include('partials/footer') %>
